{
  "name": "daishi-global-state-tearing",
  "description": "Test tearing in React concurrent rendering",
  "author": "Colin Campbell",
  "scripts": {
    "use-sync-external-store-sync": "CONCURRENT_MODE=false STATE=use_sync_external_store webpack serve --mode=development",
    "use-sync-external-store-concurrent": "CONCURRENT_MODE=true STATE=use_sync_external_store webpack serve --mode=development",
    "external-sync": "CONCURRENT_MODE=false STATE=external webpack serve --mode=development",
    "external-concurrent": "CONCURRENT_MODE=true STATE=external webpack serve --mode=development",
    "context-sync": "CONCURRENT_MODE=false STATE=context webpack serve --mode=development",
    "context-concurrent": "CONCURRENT_MODE=true STATE=context webpack serve --mode=development"
  },
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^4.0.0-beta.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "babel-loader": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.33.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": "> 0.2%, not dead"
            }
          ],
          "@babel/preset-react"
        ]
      },
      "jest": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs",
          "@babel/plugin-transform-react-jsx"
        ]
      }
    }
  }
}
